@using EPiServer.Web.Routing
@model PhonyClubDenmark.Website.Models.ViewModels.PageViewModel<PhonyClubDenmark.Website.Models.Pages.StartPage>

@{
    var _partialModel = new PhonyClubDenmark.Website.Models.Pages.CoverLayoutPage
        {
            BackgroundImage   = Model.CurrentPage.BackgroundImage,
            CallToActionLink = Model.CurrentPage.CallToActionLink,
            CallToActionLabel = Model.CurrentPage.CallToActionLabel,
            Title =  Model.CurrentPage.Title,
            TeaserText = Model.CurrentPage.TeaserText,
        };
        <text>
            @section Css
            {
                <link href="/Content/cover.css" rel="stylesheet" />
        
                @if (_partialModel.BackgroundImage != null)
                {
                    var url = @UrlResolver.Current.GetUrl(_partialModel.BackgroundImage);
                    <style>
                        body {
                            background-image: url(@url);
                        }
                    </style>
                }
            }
        </text>
         
}


@{Html.RenderPartial("~/Views/Shared/PagePartials/_BootstrapCoverPage.cshtml", _partialModel);}
